@page
@model FinalWebProject.Pages.Admin.ResellerManagement.IndexModel
@{
	ViewData["Title"] = "Reseller Listing";
}

<div class = "container">
	<h4 class = "text-center mb-4 display-4">Resellers</h4>
	<a asp-page = "Create" class = "btn btn-primary mb-3">Create</a>
	<table class = "table">
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(model => model.Resellers[0].ResellerName)</th>
				<th>@Html.DisplayNameFor(model => model.Resellers[0].ResellerEmail)</th>
				<th>@Html.DisplayNameFor(model => model.Resellers[0].ResellerPassword)</th>
				<th>@Html.DisplayNameFor(model => model.Resellers[0].ResellerLocation)</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			@{
				foreach(var item in Model.Resellers)
				{
					<tr>
						<td>@Html.DisplayFor(modelItem => item.ResellerName)</td>
						<td>@Html.DisplayFor(modelItem => item.ResellerEmail)</td>
						<td>@Html.DisplayFor(modelItem => item.ResellerPassword)</td>
						<td>@Html.DisplayFor(modelItem => item.ResellerLocation)</td>
						<td>
							<a asp-page = "./Edit" class = "btn btn-success" asp-route-id = "@item.ResellerId" >Edit</a>
							<a asp-page = "./Details" class = "btn btn-info" asp-route-id = "@item.ResellerId"  >Details</a>
							<a asp-page = "./Delete" class = "btn btn-danger" asp-route-id = "@item.ResellerId" >Delete</a>
						</td>
					</tr>
				}
			}
		</tbody>
	</table>
	<a asp-page = "../Index" class = "btn btn-danger mt-4">Go Back</a>
</div>
