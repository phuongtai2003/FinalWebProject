@page
@model FinalWebProject.Pages.Admin.ResellerManagement.CreateModel
@{
	ViewData["Title"] = "Create Reseller";
}

<div class = "container">
	<h4 class  ="text-center mb-3">Create Reseller</h4>
	<div class = "row">
		<div class = "col-lg-6 mx-auto border rounded py-2 px-4">
			<form method = "post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class = "form-group mb-3">
					<label asp-for="Reseller.ResellerName" class="control-label"></label>
					<input asp-for="Reseller.ResellerName" class="form-control" />
					<span asp-validation-for="Reseller.ResellerName" class="text-danger"></span>
				</div>
				<div class = "form-group mb-3">
					<label asp-for="Reseller.ResellerEmail" class="control-label"></label>
					<input asp-for="Reseller.ResellerEmail" class="form-control" type = "email" />
					<span asp-validation-for="Reseller.ResellerEmail" class="text-danger"></span>
				</div>
				<div class = "form-group mb-3">
					<label asp-for="Reseller.ResellerPassword" class="control-label"></label>
					<input type = "password" asp-for="Reseller.ResellerPassword" class="form-control" />
					<span asp-validation-for="Reseller.ResellerPassword" class="text-danger"></span>
				</div>
				<div class = "form-group mb-3">
					<label asp-for="Reseller.ResellerLocation" class="control-label"></label>
					<input asp-for="Reseller.ResellerLocation" class="form-control" />
					<span asp-validation-for="Reseller.ResellerLocation" class="text-danger"></span>
				</div>
				<div class="form-group">
					<button class = "btn btn-primary" type = "submit">Create</button>
				</div>
			</form>
		</div>
	</div>
	<a class = "btn btn-danger mt-3" asp-page="Index">Back to List</a>

</div>