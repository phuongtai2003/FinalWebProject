@page
@model FinalWebProject.Pages.Admin.AccountantManagement.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Accountant</h4>
<hr />
@{
    if (ViewBag.Message != null)
    {
        <div class = "alert alert-danger text-center">@ViewBag.Message</div>
    }
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Accountant.AcccountantName" class="control-label"></label>
                <input asp-for="Accountant.AcccountantName" class="form-control" />
                <span asp-validation-for="Accountant.AcccountantName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accountant.AccountantEmail" class="control-label"></label>
                <input asp-for="Accountant.AccountantEmail" class="form-control" />
                <span asp-validation-for="Accountant.AccountantEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accountant.AccountantPassword" class="control-label"></label>
                <input asp-for="Accountant.AccountantPassword" class="form-control" />
                <span asp-validation-for="Accountant.AccountantPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accountant.WarehouseID" class="control-label"></label>
                <select asp-for="Accountant.WarehouseID" class ="form-control" asp-items="@Model.WarehouseList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
