@page
@model FinalWebProject.Pages.Admin.PhoneManagement.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class = "mb-3">List of Phones</h1>

<a asp-page="Create" class = "btn btn-primary mb-4">Create New</a>

<div class = "container">
    <div class = "row">
        @foreach(var item in Model.Phone)
        {
            <div class = "col-lg-3 col-md-6 mb-3">
                <div class = "card h-100">
                    <div class = "card-header">
                        <img style = "width: 100%; height: 100%;" src = "@Html.DisplayFor(modelItem => item.Image)"></img>
                    </div>
                    <div class = "card-body">
                        <div>
                            <strong>Phone Name:</strong>
                            <span>@Html.DisplayFor(modelItem => item.PhoneName)</span>
                        </div>
                        <div>
                            <strong>Phone Description:</strong>
                            <span>@Html.DisplayFor(modelItem => item.PhoneDescription)</span>
                        </div>
                        <div>
                            <strong>Released Year:</strong>
                            <span>@Html.DisplayFor(modelItem => item.PhoneYear)</span>
                        </div>
                        <div>
                            <strong>Manufacturer:</strong>
                            <span>@Html.DisplayFor(modelItem => item.Manufacturer.ManufacturerName)</span>
                        </div>
                        <div>
                            <strong>Price:</strong>
                            <span>@item.Price.ToString("#,##0") VND</span>
                        </div>
                    </div>
                    <div class = "card-footer">
                        <a asp-page="./Edit" class = "btn btn-primary" asp-route-id="@item.PhoneId">Edit</a>
                        <a asp-page="./Details" class = "btn btn-info" asp-route-id="@item.PhoneId">Details</a>
                        <a asp-page="./Delete" class = "btn btn-danger" asp-route-id="@item.PhoneId">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <a asp-page = "../Index" class = "btn btn-danger mt-4">Go Back</a>
</div>