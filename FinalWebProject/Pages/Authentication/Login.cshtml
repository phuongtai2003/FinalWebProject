@page
@model FinalWebProject.Pages.Authetication.LoginModel
@{
	
}

<div class = "container mt-5">
	<div class = "row justify-content-center align-items-center">
		<div class = "col-lg-4 col-md-6">
			<h5 class = "display-6 text-center mb-3">Login T&T</h5>
			<div class = "py-3 px-4 border rounded">
				<form method = "post">
					<div class="form-group mb-3">
						<label asp-for="LoginViewModel.Email">Email</label>
						<input type="email" asp-for="LoginViewModel.Email" class = "form-control">
						<span asp-validation-for="LoginViewModel.Email" class = "text-danger"></span>
					</div>
					<div class="form-group mb-3">
						<label asp-for="LoginViewModel.Password">Password</label>
						<input type="password" asp-for="LoginViewModel.Password" class = "form-control">
						<span asp-validation-for="LoginViewModel.Password" class = "text-danger"></span>
					</div>
					<div class="form-group mb-3">
						<input type="checkbox" asp-for="LoginViewModel.RememberMe" class = "form-check-input" />
						<label asp-for="LoginViewModel.RememberMe">Remember Me?</label>
					</div>
					<button type = "submit" class = "btn btn-primary">Login</button>
				</form>
			</div>
			@{
				if (ViewBag.Error != null)
				{
					<div class = "alert alert-danger text-center mt-3">@ViewBag.Error</div>
				}
			}
		</div>
	</div>
</div>
